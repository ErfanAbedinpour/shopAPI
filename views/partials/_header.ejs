<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <link rel="stylesheet" href="fonts/flaticon.css">
    <link rel="stylesheet" href="css/magnific-popup.css">
<style>
    .product-container {
        position: relative;
        display: inline-block;
        padding-right: 20px;
    }
    .product-container .product-count {
        position: absolute;
        top: -10px;
        right: 10px;
        background-color: red;
        color: white;
        width: 20px;
        text-align: center;
        height: 20px;
        border-radius: 50%;
        line-height: 20px;
        font-size: 12px;
    }
    .profile-circle {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #ccc;
        overflow: hidden;
        position: relative;
    }
  
    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .dropdown {
        display: inline-block;
        position: relative;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: white;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }

    .dropdown-content a {
      color: black;
      text-decoration: none;
      display: block;
      padding: 10px;
    }


</style>
<nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container">
        <ul class="nav navbar-nav mr-auto navbar-left">
            <li class="active"><a class="page-scroll" href="/">خانه</a></li>
            <% if(!locals.messages.isLogin) {%>
                <li><a href="/auth/singup">ثبت نام</a></li>
                <li><a href="/auth/login">ورود</a></li>
            <% }else{%>       
                <li >        
                    <div class="product-container">
                        <div class="product-count"><%= locals.messages.ordcount %></div>
                        <a href="/order/Follow/" style="padding-left: 20px;">سفارشات</a>
                    </div>
                </li>
            <% } %>
        </ul>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav mr-auto navbar-right">
                <a  href="/blog/" style="padding-left: 13px; color: white;">مقالات</a>
                <li><a  class="page-scroll" href="#products" color: white;">محصولات پر بازدید</a></li>
                <a  href="/product/" style="padding-left: 13px; padding-right: 12px; color: white;">همه محصولات</a>
                <li><a  class="page-scroll" href="#contact" color: white;">تماس با ما</a></li>
                <a href="/aboutme" style="padding-left: 13px; color: white;">درباره ما</a>
            </ul>
            <ul class="collapse navbar-collapse" style="padding-right: 20px;" >
                <% if(locals.messages.isLogin && locals.messages.isAdmin){%>
                    <div class="product-container">
                        <div class="product-count"><%= locals.messages.mailCount%></div>
                        <a href="/mail/"><img src="/img/mailbox.png" alt="عکس محصول" class="product-image" style="height: 30px; "></a>
                    </div>
                    <a style="padding-right: 10px;" href="/user/"><img src="/img/user.png" alt="UsersList" class="product-image" style="height: 30px;"></a>
                    <a style="padding-right: 10px;" href="/user/add-user/"><img src="/img/add-user.png" alt="UsersList" class="product-image"style="height: 30px;"></a>
                    <a style="padding-right: 10px;" href="/product/add-product"><img src="/img/add-product.png" alt="UsersList" class="product-image"style="height: 30px;"></a>
                    <a style="padding-right: 10px;" href="/product/manage-product"><img src="/img/products.png" alt="UsersList" class="product-image"style="height: 30px;"></a>
                    <a style="padding-right: 10px;" href="/blog/add"><img src="/img/blog.png" alt="UsersList" class="product-image"style="height: 30px;"></a>
                <% } %>
            </ul>
            <% if(locals.messages.isLogin) {%>
                <ul class="nav navbar-nav mr-auto navbar-left">
                    <div class="dropdown" style="padding-left: 5px;">
                        اقای <%=locals.messages.userName %> 
                        <ul class="dropdown-content">
                            <a href="/auth/logout/" style="color: red; text-align: center;">خروج از اکانت</a>
                            <a href="/auth/edit/" style="color: black; text-align: center;">تغییر پروفایل کاربر</a>
                        </ul>
                    </div>
                    <li class="profile-circle">
                        <img class="profile-img" src="<%=locals.messages.profile %>" alt="User Avatar">    
                    </li>
                    <div class="product-container">
                        <div class="product-count"><%= locals.messages.cartCount%></div>
                        <a href="/cart/"><img src="/img/cart.png" alt="عکس محصول" class="product-image" style="height: 30px; "></a>
                    </div>                    
                </ul>
            <% } %>
        </div>
    </div>
</nav>